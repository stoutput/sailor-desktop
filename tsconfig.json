{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "esnext",
        "target": "es5",
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "checkJs": true,
        "allowJs": true,
        "allowSyntheticDefaultImports" : true,
        "esModuleInterop" : true,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
    },
    "include": [
        "src/react/*",
    ],
    "exclude": [
        "node_modules",
    ]
}